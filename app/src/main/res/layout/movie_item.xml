<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/movie_item_padding">

    <ImageView
        android:id="@+id/imgPoster"
        android:layout_width="@dimen/poster_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/poster_margin_start"
        android:layout_marginTop="@dimen/poster_margin_top"
        android:layout_marginEnd="@dimen/poster_margin_end"
        android:layout_marginBottom="@dimen/poster_margin_bottom"
        android:contentDescription="@string/poster_content_details"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/title_margin_start"
        android:layout_marginTop="@dimen/title_margin_top"
        android:layout_marginEnd="@dimen/title_margin_end"
        android:layout_toEndOf="@+id/imgPoster"
        android:textColor="@color/black"
        android:textSize="@dimen/title_font_size" />

    <TextView
        android:id="@+id/txtOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/overview_margin_start"
        android:layout_marginTop="@dimen/overview_margin_top"
        android:layout_marginEnd="@dimen/overview_margin_end"
        android:layout_toEndOf="@+id/imgPoster"
        android:textColor="@color/black"
        android:textSize="@dimen/overview_font_size" />
</RelativeLayout>